<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>install</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>target/</directory>
			<includes>
				<include>moviesdata-*.jar</include>
			</includes>
			<outputDirectory>MovieData/lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/release/application/</directory>
			<includes>
				<include>*.bat.template</include>
			</includes>
			<outputDirectory>MovieData/bin/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/release/application/</directory>
			<includes>
				<include>*.xml.template</include>
				<include>*.yml.template</include>
			</includes>
			<outputDirectory>MovieData/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/release/application/csv/</directory>
			<includes>
				<include>*.csv</include>
			</includes>
			<outputDirectory>MovieData/csv/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>.</directory>
			<outputDirectory>MovieData/logs/</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>
